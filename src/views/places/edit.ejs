<% layout('layouts/boilerplate')%>
    <h1 class="text-6xl mb-3">Edit place</h1>
    <form action="/places/<%=place._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="block mb-2 text-lg font-medium text-gray-900 ">Title: </label>
        <input type="text" name="place[title]" value="<%=place.title%>" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-[50vw] p-2.5 dark:bg-gray-100 dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
      </div>
      <div class="mb-3">
        <label for="location" class="block mb-2 text-lg font-medium text-gray-900 ">Location: </label>
        <input type="text" name="place[location]" value="<%=place.location%>" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-[50vw] p-2.5 dark:bg-gray-100 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
      </div>
      <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Submit</button>
    </form>
  <a href="/places/<%=place._id%>" class="text-sky-700 underline">Back to Place details</a>