<% layout('layouts/boilerplate')%>
<div class="max-w-7xl mx-auto">
  <!-- Title -->
  <h1
    class="text-6xl text-center py-6 font-extrabold text-white drop-shadow-lg mb-8"
  >
    All Places
  </h1>

  <!-- Add New Place Button -->
  <div class="text-right mb-8">
    <a
      class="inline-flex items-center justify-center text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-xl text-base px-6 py-3 shadow-lg transition duration-200 transform hover:scale-[1.02] focus:outline-none"
      href="/places/new"
    >
      + Add New Place
    </a>
  </div>
  <div class="space-y-6 p-20 overflow-x-hidden max-w-screen">
    <% for(let place of allPlaces){ %>
    <a
      href="/places/<%= place.id %>"
      class="dynamic-card flex flex-col md:flex-row w-full rounded-xl shadow-lg overflow-hidden transition duration-300"
      >
      <!-- data-tilt
      data-tilt-max="5"
      data-tilt-speed="400"
      data-tilt-perspective="1000" -->
      <!-- Image Section -->
      <div class="card-img-box w-full md:w-2/5 lg:w-1/3">
        <img
          class="object-cover w-full h-full rounded-t-xl md:rounded-l-xl md:rounded-tr-none"
          src="<%= place.imageUrl %>"
          alt="Image of <%= place.title %>"
          onerror="this.onerror=null; this.src='https://placehold.co/600x400/6EE7B7/000000?text=Image+Unavailable'"
        />
      </div>

      <!-- Content Section -->
      <div
        class="flex flex-col justify-center p-6 w-full md:w-3/5 lg:w-2/3 relative z-0"
      >
        <h2
          class="mb-2 text-3xl font-bold tracking-tight text-white drop-shadow-sm"
        >
          <%= place.title %>
        </h2>

        <!-- Visible Teaser -->
        <p class="text-base font-medium text-emerald-300 mt-1">
          Click to view details and description &rarr;
        </p>

        <!-- Hidden Content (Revealed on Hover) -->
        <div class="card-content-text mt-4">
          <p class="mb-3 text-lg font-normal text-gray-100">
            <%= place.description %>
          </p>
          <span class="text-sm font-medium text-emerald-300"
            >Explore this destination now.</span
          >
        </div>
      </div>
    </a>
    <% } %>

