<% layout('layouts/boilerplate')%>
<h1 class="text-7xl text-center py-3">All Places</h1>
<p class="text-right">
  <a
    class="border-2 py-1 px-2 rounded-md bg-gray-300 hover:bg-gray-500"
    href="/places/new"
    >Add new place</a
  >
</p>

<div class="mt-2">
  <% for(let place of allPlaces){ %>
    <a
    href="/places/<%=place._id%>"
    class=" mt-2 flex w-[100vw] flex-col flex-1 items-center justify-between bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row md:max-w-full hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
  >
    <img
      class="object-cover w-full rounded-t-lg h-85  md:w-[40vw] md:rounded-none md:rounded-s-lg"
      src="https://flowbite.com/docs/images/blog/image-4.jpg"
      alt=""
    />
    <div class="flex flex-col justify-between p-4 leading-normal">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        <%=place.title%>
      </h5>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        <%=place.description%>
      </p>
    
    </div>
  </a>
  <% } %>
</ul>

