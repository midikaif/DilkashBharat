<% layout('layouts/boilerplate')%>
<div class="pt-4 flex justify-between gap-3">
  <div class="w-1/2 flex flex-col h-screen">
    <div class="mb-20">
      <h1 class="text-5xl font-bold mb-2"><%= place.title %></h1>
      <h2 class="text-3xl"><%= place.location %></h2>
    </div>
    <div class="flex gap-2 items-center">
      <p>
        <a
          href="/places/<%= place._id %>/edit"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
          >Edit</a
        >
      </p>
      <form action="/places/<%= place._id %>?_method=DELETE" method="POST">
        <button
          type="button"
          class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
        >
          Delete
        </button>
      </form>
      <p><a href="/places" class="text-blue-700 underline">All places</a></p>
    </div>
  </div>

  <div class="reviews w-1/3 px-4 py-10 rounded-lg">
    <h2 class="text-2xl mb-3">Leave a review:</h2>
    <form action="/places/<%=place._id%>/reviews" method="post" class="">
      <div class="review-rating mb-2">
        <label for="review">Rating:</label>
        <input type="range" min="1" max="5" name="review[rating]" id="rating" />
      </div>
      <div class="review-body flex flex-col mb-2">
        <label for="description">Description:</label>
        <textarea
          name="review[body]"
          class="border border-gray-600 h-20"
          id="description"
        ></textarea>
      </div>
      <button
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
      >
        Submit
      </button>
    </form>

    <div class="mb-3">
      <h3 class="text-2xl mb-3">Reviews</h3>
      <% for(let review of place.reviews){ %>
      <div class="flex justify-between items-center border-gray-700 p-4 rounded-xl bg-blue-100 my-2">
        <div class="">
          <p>Rating: <%= review.rating %></p>
          <p class=""><%= review.body %></p>
        </div>
        <form action="/places/<%= place._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
        <button
          type="submit"
          class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 rounded-lg text-xs px-2.5 py-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
        >
          Delete
        </div>
        </button>
      </div>

      <% } %>
    </div>
  </div>
</div>
