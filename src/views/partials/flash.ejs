<div
  id="successAlert"
  class="alert-container show fixed top-5 left-1/2 -translate-x-1/2 w-full max-w-lg z-[9999] px-4 md:px-0"
  data-initial-render="true"
>
  <div
    class="flex items-center justify-between p-4 rounded-lg shadow-xl glass-alert-base"
    role="alert"
  >
    <div class="flex items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 mr-3 <%= success.length ? 'text-emerald-300' : 'text-rose-400' %>"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <% if(success.length){ %>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        <% } else if(error.length){ %>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          />
        <% } %>
      </svg>

      <% if(success.length){ %>
      <p class="text-sm font-medium glass-alert-text">
        <span id="alertMessage"> <%= success %></span>
      </p>
      <% }else if(error.length){%>
      <p class="text-sm font-medium glass-alert-text">
        <span id="alertMessage"> <%= error %></span>
      </p>
      <% } %>
    </div>

    <button
      id="closeAlertBtn"
      class="p-1.5 ml-3 rounded-full cursor-pointer transition duration-150 <%= success.length ? 'text-emerald-300 hover:bg-emerald-700/50' : 'text-rose-400 hover:bg-rose-700/50' %>"
      aria-label="Close"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>
</div>